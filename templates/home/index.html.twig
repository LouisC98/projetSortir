{% extends 'base.html.twig' %}

{% block title %}Liste des sorties{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-8">
        <h1 class="text-3xl font-bold text-gray-900">Liste des sorties</h1>
        <div class="flex items-center gap-4">
            <div class="text-sm text-gray-500">
                {{ pagination.totalItems }} sortie{{ pagination.totalItems > 1 ? 's' : '' }} au total
            </div>
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <a href="{{ path('app_sortie_new') }}"
                   class="inline-flex items-center px-5 py-2 border border-transparent text-sm font-medium rounded-lg text-white bg-gradient-to-r from-green-500 to-green-600 hover:from-green-600 hover:to-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 shadow-md hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200">
                    <svg class="w-5 h-5 mr-2" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                    </svg>
                    Créer une sortie
                </a>
            {% endif %}
        </div>
    </div>

    <!-- Section des filtres -->
    <div class="bg-white shadow-lg rounded-lg mb-6 overflow-hidden">
        <div class="bg-gradient-to-r from-blue-50 to-indigo-50 px-6 py-4 border-b border-gray-200">
            <h2 class="text-lg font-semibold text-gray-900 flex items-center">
                <svg class="w-5 h-5 mr-2 text-blue-600" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.414A1 1 0 013 6.707V4z"></path>
                </svg>
                Filtres de recherche
            </h2>
        </div>

        {{ form_start(filterForm, {'attr': {'class': 'p-6'}}) }}

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-6">
            <!-- Site -->
            <div class="space-y-2">
                {{ form_label(filterForm.site, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                {{ form_widget(filterForm.site, {'attr': {'class': 'w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500'}}) }}
            </div>

            <!-- Nom de sortie -->
            <div class="space-y-2">
                {{ form_label(filterForm.name, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                {{ form_widget(filterForm.name, {'attr': {'class': 'w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500'}}) }}
            </div>

            <!-- Date début -->
            <div class="space-y-2">
                {{ form_label(filterForm.dateDebut, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                {{ form_widget(filterForm.dateDebut, {'attr': {'class': 'w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500'}}) }}
            </div>

            <!-- Date fin -->
            <div class="space-y-2">
                {{ form_label(filterForm.dateFin, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                {{ form_widget(filterForm.dateFin, {'attr': {'class': 'w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500'}}) }}
            </div>
        </div>

        <!-- Checkboxes -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-6">
            <div class="flex items-center space-x-3 p-3 bg-gray-50 rounded-lg">
                {{ form_widget(filterForm.mesSorties, {'attr': {'class': 'h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded'}}) }}
                {{ form_label(filterForm.mesSorties, null, {'label_attr': {'class': 'text-sm font-medium text-gray-700 cursor-pointer'}}) }}
            </div>

            <div class="flex items-center space-x-3 p-3 bg-gray-50 rounded-lg">
                {{ form_widget(filterForm.sortiesInscrit, {'attr': {'class': 'h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded'}}) }}
                {{ form_label(filterForm.sortiesInscrit, null, {'label_attr': {'class': 'text-sm font-medium text-gray-700 cursor-pointer'}}) }}
            </div>

            <div class="flex items-center space-x-3 p-3 bg-gray-50 rounded-lg">
                {{ form_widget(filterForm.sortiesNonInscrit, {'attr': {'class': 'h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded'}}) }}
                {{ form_label(filterForm.sortiesNonInscrit, null, {'label_attr': {'class': 'text-sm font-medium text-gray-700 cursor-pointer'}}) }}
            </div>

            <div class="flex items-center space-x-3 p-3 bg-gray-50 rounded-lg">
                {{ form_widget(filterForm.sortiesPassees, {'attr': {'class': 'h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded'}}) }}
                {{ form_label(filterForm.sortiesPassees, null, {'label_attr': {'class': 'text-sm font-medium text-gray-700 cursor-pointer'}}) }}
            </div>
        </div>

        <!-- Boutons d'action -->
        <div class="flex flex-col sm:flex-row justify-between items-center gap-4 pt-4 border-t border-gray-200">
            <div class="flex flex-col sm:flex-row gap-3 w-full sm:w-auto">
                {{ form_widget(filterForm.rechercher, {'attr': {'class': 'w-full sm:w-auto bg-gradient-to-r from-blue-500 to-blue-600 hover:from-blue-600 hover:to-blue-700 text-white font-medium py-2 px-6 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200'}}) }}

                <a href="{{ path('home') }}" class="w-full sm:w-auto bg-gray-300 hover:bg-gray-400 text-gray-700 font-medium py-2 px-6 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition-all duration-200 text-center">
                    Réinitialiser
                </a>
            </div>

            {% if currentFilters|length > 0 %}
            <div class="text-sm text-gray-600 bg-blue-50 px-3 py-1 rounded-full border border-blue-200">
                <svg class="w-4 h-4 inline mr-1" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.414A1 1 0 013 6.707V4z"></path>
                </svg>
                {{ currentFilters|length }} filtre(s) actif(s)
            </div>
            {% endif %}
        </div>

        {{ form_end(filterForm) }}
    </div>

    <div class="bg-white shadow-lg rounded-lg overflow-hidden">
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nom</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date début</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Durée</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Clôture inscriptions</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Max</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">État</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Organisateur</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Site</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Lieu</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Participants</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                {% for sortie in sorties %}
                    <tr class="hover:bg-gray-50 transition-colors duration-200">
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                            <a href="{{ path('app_sortie_show', {id: sortie.id}) }}"
                               class="text-blue-600 hover:text-blue-800 hover:underline transition-colors duration-200">
                                {{ sortie.name }}
                            </a>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{{ sortie.startDateTime ? sortie.startDateTime|date('d/m/Y H:i') : '' }}</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{{ sortie.duration ? sortie.duration|date('H:i') ~ ' h' : '' }}</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{{ sortie.registrationDeadline ? sortie.registrationDeadline|date('d/m/Y') : '' }}</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{{ sortie.maxRegistration }}</td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            {% if sortie.state %}
                                {% set stateClass = '' %}
                                {% if sortie.state.value == 'Ouverte' %}
                                    {% set stateClass = 'bg-green-100 text-green-800' %}
                                {% elseif sortie.state.value == 'Créée' %}
                                    {% set stateClass = 'bg-blue-100 text-blue-800' %}
                                {% elseif sortie.state.value == 'Clôturée' %}
                                    {% set stateClass = 'bg-orange-100 text-orange-800' %}
                                {% elseif sortie.state.value == 'Activité en cours' %}
                                    {% set stateClass = 'bg-purple-100 text-purple-800' %}
                                {% elseif sortie.state.value == 'Passée' %}
                                    {% set stateClass = 'bg-gray-100 text-gray-800' %}
                                {% elseif sortie.state.value == 'Annulée' %}
                                    {% set stateClass = 'bg-red-100 text-red-800' %}
                                {% endif %}
                                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full {{ stateClass }}">
                                    {{ sortie.state.value }}
                                </span>
                            {% endif %}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            <a href="{{ path('view_user_profil', {id: sortie.organisateur.id}) }}"
                               class="text-blue-600 hover:text-blue-800 hover:underline transition-colors duration-200">
                                {{ sortie.organisateur ? sortie.organisateur.pseudo : '' }}
                            </a>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{{ sortie.site ? sortie.site.name : '' }}</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            {% if sortie.place %}
                                {{ sortie.place.name }}{% if sortie.place.city %} ({{ sortie.place.city.name }}){% endif %}
                            {% endif %}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800">
                                {{ sortie.participants|length }} personne(s)
                            </span>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="11" class="px-6 py-12 text-center text-sm text-gray-500">
                            <div class="flex flex-col items-center">
                                <svg class="w-12 h-12 text-gray-300 mb-4" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                                </svg>
                                <p class="text-lg font-medium">Aucune sortie pour le moment</p>
                                <p class="text-sm">Les sorties apparaîtront ici une fois créées</p>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        {% if pagination.totalPages > 1 %}
        <div class="bg-gradient-to-r from-gray-50 to-gray-100 px-6 py-4 flex items-center justify-between border-t border-gray-200">
            <!-- Mobile pagination -->
            <div class="flex-1 flex justify-between sm:hidden">
                {% if pagination.hasPrev %}
                    <a href="{{ path('home', currentFilters|merge({page: pagination.currentPage - 1})) }}"
                       class="relative inline-flex items-center px-6 py-3 border border-transparent text-sm font-medium rounded-lg text-white bg-gradient-to-r from-blue-500 to-blue-600 hover:from-blue-600 hover:to-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 shadow-md hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200">
                        <svg class="w-4 h-4 mr-2" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                        </svg>
                        Précédent
                    </a>
                {% else %}
                    <span class="relative inline-flex items-center px-6 py-3 border border-gray-300 text-sm font-medium rounded-lg text-gray-400 bg-gray-200 cursor-not-allowed shadow-sm">
                        <svg class="w-4 h-4 mr-2" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                        </svg>
                        Précédent
                    </span>
                {% endif %}

                {% if pagination.hasNext %}
                    <a href="{{ path('home', currentFilters|merge({page: pagination.currentPage + 1})) }}"
                       class="ml-3 relative inline-flex items-center px-6 py-3 border border-transparent text-sm font-medium rounded-lg text-white bg-gradient-to-r from-blue-500 to-blue-600 hover:from-blue-600 hover:to-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 shadow-md hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200">
                        Suivant
                        <svg class="w-4 h-4 ml-2" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                        </svg>
                    </a>
                {% else %}
                    <span class="ml-3 relative inline-flex items-center px-6 py-3 border border-gray-300 text-sm font-medium rounded-lg text-gray-400 bg-gray-200 cursor-not-allowed">
                        Suivant
                        <svg class="w-4 h-4 ml-2" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                        </svg>
                    </span>
                {% endif %}
            </div>

            <!-- Desktop pagination -->
            <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between">
                <div>
                    <p class="text-sm text-gray-600 bg-white px-4 py-2 rounded-md shadow-sm border border-gray-200">
                        Affichage de
                        <span class="font-semibold text-blue-600">{{ ((pagination.currentPage - 1) * pagination.limit) + 1 }}</span>
                        à
                        <span class="font-semibold text-blue-600">{{ min(pagination.currentPage * pagination.limit, pagination.totalItems) }}</span>
                        sur
                        <span class="font-semibold text-blue-600">{{ pagination.totalItems }}</span>
                        résultats
                    </p>
                </div>
                <div>
                    <nav class="relative z-0 inline-flex rounded-xl shadow-lg bg-white border border-gray-200 overflow-hidden" aria-label="Pagination">
                        <!-- Bouton Précédent -->
                        {% if pagination.hasPrev %}
                            <a href="{{ path('home', currentFilters|merge({page: pagination.currentPage - 1})) }}"
                               class="relative inline-flex items-center px-4 py-3 bg-white text-sm font-medium text-gray-600 hover:bg-gradient-to-r hover:from-blue-500 hover:to-blue-600 hover:text-white focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200 group">
                                <span class="sr-only">Précédent</span>
                                <svg class="h-5 w-5 group-hover:animate-pulse" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
                                </svg>
                            </a>
                        {% else %}
                            <span class="relative inline-flex items-center px-4 py-3 bg-gray-100 text-sm font-medium text-gray-400 cursor-not-allowed">
                                <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
                                </svg>
                            </span>
                        {% endif %}

                        <!-- Numéros de pages -->
                        {% set startPage = max(1, pagination.currentPage - 2) %}
                        {% set endPage = min(pagination.totalPages, pagination.currentPage + 2) %}

                        {% if startPage > 1 %}
                            <a href="{{ path('home', currentFilters|merge({page: 1})) }}"
                               class="relative inline-flex items-center px-4 py-3 border-l border-gray-200 bg-white text-sm font-medium text-gray-700 hover:bg-gradient-to-r hover:from-blue-500 hover:to-blue-600 hover:text-white focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200 hover:border-blue-500">
                                1
                            </a>
                            {% if startPage > 2 %}
                                <span class="relative inline-flex items-center px-4 py-3 border-l border-gray-200 bg-white text-sm font-medium text-gray-500">
                                    <span class="animate-pulse">...</span>
                                </span>
                            {% endif %}
                        {% endif %}

                        {% for page in startPage..endPage %}
                            {% if page == pagination.currentPage %}
                                <span class="relative inline-flex items-center px-4 py-3 border-l border-gray-200 bg-gradient-to-r from-blue-500 to-blue-600 text-sm font-bold text-white shadow-inner">
                                    {{ page }}
                                </span>
                            {% else %}
                                <a href="{{ path('home', currentFilters|merge({page: page})) }}"
                                   class="relative inline-flex items-center px-4 py-3 border-l border-gray-200 bg-white text-sm font-medium text-gray-700 hover:bg-gradient-to-r hover:from-blue-500 hover:to-blue-600 hover:text-white focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200 hover:border-blue-500 hover:shadow-md hover:-translate-y-0.5">
                                    {{ page }}
                                </a>
                            {% endif %}
                        {% endfor %}

                        {% if endPage < pagination.totalPages %}
                            {% if endPage < pagination.totalPages - 1 %}
                                <span class="relative inline-flex items-center px-4 py-3 border-l border-gray-200 bg-white text-sm font-medium text-gray-500">
                                    <span class="animate-pulse">...</span>
                                </span>
                            {% endif %}
                            <a href="{{ path('home', currentFilters|merge({page: pagination.totalPages})) }}"
                               class="relative inline-flex items-center px-4 py-3 border-l border-gray-200 bg-white text-sm font-medium text-gray-700 hover:bg-gradient-to-r hover:from-blue-500 hover:to-blue-600 hover:text-white focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200 hover:border-blue-500">
                                {{ pagination.totalPages }}
                            </a>
                        {% endif %}

                        <!-- Bouton Suivant -->
                        {% if pagination.hasNext %}
                            <a href="{{ path('home', currentFilters|merge({page: pagination.currentPage + 1})) }}"
                               class="relative inline-flex items-center px-4 py-3 border-l border-gray-200 bg-white text-sm font-medium text-gray-600 hover:bg-gradient-to-r hover:from-blue-500 hover:to-blue-600 hover:text-white focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200 group">
                                <span class="sr-only">Suivant</span>
                                <svg class="h-5 w-5 group-hover:animate-pulse" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                                </svg>
                            </a>
                        {% else %}
                            <span class="relative inline-flex items-center px-4 py-3 border-l border-gray-200 bg-gray-100 text-sm font-medium text-gray-400 cursor-not-allowed">
                                <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                                </svg>
                            </span>
                        {% endif %}
                    </nav>
                </div>
            </div>
        </div>
        {% endif %}
    </div>
</div>

{% endblock %}
