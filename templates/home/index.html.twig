{% extends 'base.html.twig' %}

{% block title %}Liste des sorties{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-8">
        <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Liste des sorties</h1>
        <div class="flex items-center gap-4">
            <div class="text-sm text-gray-500 dark:text-gray-400">
                {{ pagination.totalItems }} sortie{{ pagination.totalItems > 1 ? 's' : '' }} au total
            </div>
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <a href="{{ path('app_sortie_new') }}"
                   class="desktop-only inline-flex items-center px-5 py-2 border border-transparent text-sm font-medium rounded-lg text-white bg-gradient-to-r from-green-500 to-green-600 hover:from-green-600 hover:to-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 shadow-md hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200">
                    <svg class="w-5 h-5 mr-2" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                    </svg>
                    Créer une sortie
                </a>
            {% endif %}
        </div>
    </div>

    <!-- Section des filtres -->
    <div class="bg-white dark:bg-gray-800 shadow-lg rounded-lg mb-6 overflow-hidden">
        <div class="bg-gradient-to-r from-blue-50 to-indigo-50 dark:from-gray-700 dark:to-gray-800 px-6 py-4 border-b border-gray-200 dark:border-gray-600">
            <h2 class="text-lg font-semibold text-gray-900 dark:text-white flex items-center">
                <svg class="w-5 h-5 mr-2 text-blue-600 dark:text-blue-400" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.414A1 1 0 013 6.707V4z"></path>
                </svg>
                Filtres de recherche
            </h2>
        </div>

        {{ form_start(filterForm, {'attr': {'class': 'p-6'}}) }}

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-6">
            <!-- Site -->
            <div class="space-y-2">
                {{ form_label(filterForm.site, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300'}}) }}
                {{ form_widget(filterForm.site, {'attr': {'class': 'w-full rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm focus:border-blue-500 focus:ring-blue-500 py-3 px-4'}}) }}
            </div>

            <!-- Nom de sortie -->
            <div class="space-y-2">
                {{ form_label(filterForm.name, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300'}}) }}
                {{ form_widget(filterForm.name, {'attr': {'class': 'w-full rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm focus:border-blue-500 focus:ring-blue-500 py-3 px-4'}}) }}
            </div>

            <!-- Date début -->
            <div class="space-y-2">
                {{ form_label(filterForm.dateDebut, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300'}}) }}
                {{ form_widget(filterForm.dateDebut, {'attr': {'class': 'w-full rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm focus:border-blue-500 focus:ring-blue-500 py-3 px-4'}}) }}
            </div>

            <!-- Date fin -->
            <div class="space-y-2">
                {{ form_label(filterForm.dateFin, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300'}}) }}
                {{ form_widget(filterForm.dateFin, {'attr': {'class': 'w-full rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm focus:border-blue-500 focus:ring-blue-500 py-3 px-4'}}) }}
            </div>
        </div>

        <!-- Checkboxes -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-6">
            {% if filterForm.mesSorties is defined %}
            <div class="flex items-center space-x-3 p-3 bg-gray-50 dark:bg-gray-700 rounded-lg">
                {{ form_widget(filterForm.mesSorties, {'attr': {'class': 'h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 dark:border-gray-600 rounded'}}) }}
                {{ form_label(filterForm.mesSorties, null, {'label_attr': {'class': 'text-sm font-medium text-gray-700 dark:text-gray-300 cursor-pointer'}}) }}
            </div>
            {% endif %}

            {% if filterForm.sortiesInscrit is defined %}
            <div class="flex items-center space-x-3 p-3 bg-gray-50 dark:bg-gray-700 rounded-lg">
                {{ form_widget(filterForm.sortiesInscrit, {'attr': {'class': 'h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 dark:border-gray-600 rounded'}}) }}
                {{ form_label(filterForm.sortiesInscrit, null, {'label_attr': {'class': 'text-sm font-medium text-gray-700 dark:text-gray-300 cursor-pointer'}}) }}
            </div>
            {% endif %}

            {% if filterForm.sortiesNonInscrit is defined %}
            <div class="flex items-center space-x-3 p-3 bg-gray-50 dark:bg-gray-700 rounded-lg">
                {{ form_widget(filterForm.sortiesNonInscrit, {'attr': {'class': 'h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 dark:border-gray-600 rounded'}}) }}
                {{ form_label(filterForm.sortiesNonInscrit, null, {'label_attr': {'class': 'text-sm font-medium text-gray-700 dark:text-gray-300 cursor-pointer'}}) }}
            </div>
            {% endif %}

            <div class="flex items-center space-x-3 p-3 bg-gray-50 dark:bg-gray-700 rounded-lg">
                {{ form_widget(filterForm.sortiesPassees, {'attr': {'class': 'h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 dark:border-gray-600 rounded'}}) }}
                {{ form_label(filterForm.sortiesPassees, null, {'label_attr': {'class': 'text-sm font-medium text-gray-700 dark:text-gray-300 cursor-pointer'}}) }}
            </div>
        </div>

        <!-- Boutons d'action -->
        <div class="flex flex-col sm:flex-row justify-between items-center gap-4 pt-4 border-t border-gray-200 dark:border-gray-600">
            <div class="flex flex-col sm:flex-row gap-3 w-full sm:w-auto">
                {{ form_widget(filterForm.rechercher, {'attr': {'class': 'w-full sm:w-auto bg-gradient-to-r from-blue-500 to-blue-600 hover:from-blue-600 hover:to-blue-700 text-white font-medium py-2 px-6 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200'}}) }}

                <a href="{{ path('home') }}" class="w-full sm:w-auto bg-gray-300 dark:bg-gray-600 hover:bg-gray-400 dark:hover:bg-gray-500 text-gray-700 dark:text-gray-200 font-medium py-2 px-6 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition-all duration-200 text-center">
                    Réinitialiser
                </a>
            </div>

            {% if currentFilters|length > 0 %}
            <div class="text-sm text-gray-600 dark:text-gray-300 bg-blue-50 dark:bg-blue-900 px-3 py-1 rounded-full border border-blue-200 dark:border-blue-700">
                <svg class="w-4 h-4 inline mr-1" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.414A1 1 0 013 6.707V4z"></path>
                </svg>
                {{ currentFilters|length }} filtre(s) actif(s)
            </div>
            {% endif %}
        </div>

        {{ form_end(filterForm) }}
    </div>

    <div class="bg-white dark:bg-gray-800 shadow-lg rounded-lg overflow-hidden">
        <!-- Affichage en grille avec cartes -->
        <div class="p-6">
            {% if sorties|length > 0 %}
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
                    {% for sortie in sorties %}
                        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md hover:shadow-xl transition-shadow duration-300 overflow-hidden border border-gray-200 dark:border-gray-700">
                            <!-- Image de la sortie -->
                            <a href="{{ path('app_sortie_show', {id: sortie.id}) }}" class="block">
                                {% if sortie.imageFilename %}
                                    <img src="{{ asset('uploads/sorties/' ~ sortie.imageFilename) }}"
                                         alt="{{ sortie.name }}"
                                         class="w-full h-48 object-cover">
                                {% else %}
                                    <div class="w-full h-48 bg-gradient-to-br from-blue-100 to-indigo-100 dark:from-gray-700 dark:to-gray-600 flex items-center justify-center">
                                        <svg class="w-16 h-16 text-gray-400 dark:text-gray-500" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                        </svg>
                                    </div>
                                {% endif %}
                            </a>

                            <!-- Contenu de la carte -->
                            <div class="p-4">
                                <!-- Titre et état -->
                                <div class="flex items-start justify-between mb-2">
                                    <a href="{{ path('app_sortie_show', {id: sortie.id}) }}"
                                       class="text-lg font-semibold text-gray-900 dark:text-white hover:text-blue-600 dark:hover:text-blue-400 transition-colors line-clamp-2 flex-1">
                                        {{ sortie.name }}
                                    </a>
                                    {% if sortie.state %}
                                        {% set stateClass = '' %}
                                        {% if sortie.state.value == 'Ouverte' %}
                                            {% set stateClass = 'bg-green-100 text-green-800' %}
                                        {% elseif sortie.state.value == 'Créée' %}
                                            {% set stateClass = 'bg-blue-100 text-blue-800' %}
                                        {% elseif sortie.state.value == 'Clôturée' %}
                                            {% set stateClass = 'bg-orange-100 text-orange-800' %}
                                        {% elseif sortie.state.value == 'Activité en cours' %}
                                            {% set stateClass = 'bg-purple-100 text-purple-800' %}
                                        {% elseif sortie.state.value == 'Passée' %}
                                            {% set stateClass = 'bg-gray-100 text-gray-800' %}
                                        {% elseif sortie.state.value == 'Annulée' %}
                                            {% set stateClass = 'bg-red-100 text-red-800' %}
                                        {% endif %}
                                        <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full {{ stateClass }} ml-2 whitespace-nowrap">
                                            {{ sortie.state.value }}
                                        </span>
                                    {% endif %}
                                </div>

                                <!-- Date et durée -->
                                <div class="space-y-2 mb-3 text-sm text-gray-600 dark:text-gray-400">
                                    <div class="flex items-center">
                                        <svg class="w-4 h-4 mr-2 flex-shrink-0" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                        </svg>
                                        <span class="truncate">{{ sortie.startDateTime ? sortie.startDateTime|date('d/m/Y à H:i') : '' }}</span>
                                    </div>
                                    <div class="flex items-center">
                                        <svg class="w-4 h-4 mr-2 flex-shrink-0" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                        </svg>
                                        <span>{{ sortie.duration ? ((sortie.duration / 60)|round(0) ~ 'h ' ~ (sortie.duration % 60) ~ 'min') : '' }}</span>
                                    </div>
                                    <div class="flex items-center">
                                        <svg class="w-4 h-4 mr-2 flex-shrink-0" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                        </svg>
                                        <span class="truncate">
                                            {% if sortie.place %}
                                                {{ sortie.place.name }}{% if sortie.place.city %} ({{ sortie.place.city.name }}){% endif %}
                                            {% endif %}
                                        </span>
                                    </div>
                                </div>

                                <!-- Organisateur et participants -->
                                <div class="flex items-center justify-between pt-3 border-t border-gray-200 dark:border-gray-700">
                                    <div class="text-xs text-gray-500 dark:text-gray-400 truncate flex-1">
                                        Par <a href="{{ path('view_user_profil', {id: sortie.organisateur.id}) }}"
                                             class="text-blue-600 dark:text-blue-400 hover:underline font-medium">
                                            {{ sortie.organisateur ? sortie.organisateur.pseudo : '' }}
                                        </a>
                                    </div>
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-indigo-100 dark:bg-indigo-900 text-indigo-800 dark:text-indigo-200 ml-2 whitespace-nowrap">
                                        {{ sortie.participants|length }}/{{ sortie.maxRegistration }}
                                    </span>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <div class="text-center py-12">
                    <svg class="w-16 h-16 text-gray-300 dark:text-gray-600 mx-auto mb-4" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                    </svg>
                    <p class="text-lg font-medium text-gray-900 dark:text-white mb-2">Aucune sortie pour le moment</p>
                    <p class="text-sm text-gray-500 dark:text-gray-400">Les sorties apparaîtront ici une fois créées</p>
                </div>
            {% endif %}
        </div>

        <!-- Pagination -->
        {% if pagination.totalPages > 1 %}
        <div class="bg-gradient-to-r from-gray-50 to-gray-100 dark:from-gray-700 dark:to-gray-800 px-6 py-4 flex items-center justify-between border-t border-gray-200 dark:border-gray-600">
            <!-- Mobile pagination -->
            <div class="flex-1 flex justify-between sm:hidden">
                {% if pagination.hasPrev %}
                    <a href="{{ path('home', currentFilters|merge({page: pagination.currentPage - 1})) }}"
                       class="relative inline-flex items-center px-6 py-3 border border-transparent text-sm font-medium rounded-lg text-white bg-gradient-to-r from-blue-500 to-blue-600 hover:from-blue-600 hover:to-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 shadow-md hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200">
                        <svg class="w-4 h-4 mr-2" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                        </svg>
                        Précédent
                    </a>
                {% else %}
                    <span class="relative inline-flex items-center px-6 py-3 border border-gray-300 dark:border-gray-600 text-sm font-medium rounded-lg text-gray-400 dark:text-gray-500 bg-gray-200 dark:bg-gray-700 cursor-not-allowed shadow-sm">
                        <svg class="w-4 h-4 mr-2" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                        </svg>
                        Précédent
                    </span>
                {% endif %}

                {% if pagination.hasNext %}
                    <a href="{{ path('home', currentFilters|merge({page: pagination.currentPage + 1})) }}"
                       class="ml-3 relative inline-flex items-center px-6 py-3 border border-transparent text-sm font-medium rounded-lg text-white bg-gradient-to-r from-blue-500 to-blue-600 hover:from-blue-600 hover:to-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 shadow-md hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200">
                        Suivant
                        <svg class="w-4 h-4 ml-2" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                        </svg>
                    </a>
                {% else %}
                    <span class="ml-3 relative inline-flex items-center px-6 py-3 border border-gray-300 dark:border-gray-600 text-sm font-medium rounded-lg text-gray-400 dark:text-gray-500 bg-gray-200 dark:bg-gray-700 cursor-not-allowed">
                        Suivant
                        <svg class="w-4 h-4 ml-2" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                        </svg>
                    </span>
                {% endif %}
            </div>

            <!-- Desktop pagination -->
            <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between">
                <div>
                    <p class="text-sm text-gray-600 dark:text-gray-300 bg-white dark:bg-gray-800 px-4 py-2 rounded-md shadow-sm border border-gray-200 dark:border-gray-600">
                        Affichage de
                        <span class="font-semibold text-blue-600 dark:text-blue-400">{{ ((pagination.currentPage - 1) * pagination.limit) + 1 }}</span>
                        à
                        <span class="font-semibold text-blue-600 dark:text-blue-400">{{ min(pagination.currentPage * pagination.limit, pagination.totalItems) }}</span>
                        sur
                        <span class="font-semibold text-blue-600 dark:text-blue-400">{{ pagination.totalItems }}</span>
                        résultats
                    </p>
                </div>
                <div>
                    <nav class="relative z-0 inline-flex rounded-xl shadow-lg bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-600 overflow-hidden" aria-label="Pagination">
                        <!-- Bouton Précédent -->
                        {% if pagination.hasPrev %}
                            <a href="{{ path('home', currentFilters|merge({page: pagination.currentPage - 1})) }}"
                               class="relative inline-flex items-center px-4 py-3 bg-white dark:bg-gray-800 text-sm font-medium text-gray-600 dark:text-gray-300 hover:bg-gradient-to-r hover:from-blue-500 hover:to-blue-600 hover:text-white focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200 group">
                                <span class="sr-only">Précédent</span>
                                <svg class="h-5 w-5 group-hover:animate-pulse" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" >
                                    <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                                </svg>
                            </a>
                        {% else %}
                            <span class="relative inline-flex items-center px-4 py-3 bg-gray-100 dark:bg-gray-900 text-sm font-medium text-gray-400 dark:text-gray-600 cursor-not-allowed">
                                <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" >
                                    <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                                </svg>
                            </span>
                        {% endif %}

                        <!-- Numéros de pages -->
                        {% set startPage = max(1, pagination.currentPage - 2) %}
                        {% set endPage = min(pagination.totalPages, pagination.currentPage + 2) %}

                        {% if startPage > 1 %}
                            <a href="{{ path('home', currentFilters|merge({page: 1})) }}"
                               class="relative inline-flex items-center px-4 py-3 border-l border-gray-200 dark:border-gray-600 bg-white dark:bg-gray-800 text-sm font-medium text-gray-700 dark:text-gray-300 hover:bg-gradient-to-r hover:from-blue-500 hover:to-blue-600 hover:text-white focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200 hover:border-blue-500">
                                1
                            </a>
                            {% if startPage > 2 %}
                                <span class="relative inline-flex items-center px-4 py-3 border-l border-gray-200 dark:border-gray-600 bg-white dark:bg-gray-800 text-sm font-medium text-gray-500 dark:text-gray-400">
                                    <span class="animate-pulse">...</span>
                                </span>
                            {% endif %}
                        {% endif %}

                        {% for page in startPage..endPage %}
                            {% if page == pagination.currentPage %}
                                <span class="relative inline-flex items-center px-4 py-3 border-l border-gray-200 dark:border-gray-600 bg-gradient-to-r from-blue-500 to-blue-600 text-sm font-bold text-white shadow-inner">
                                    {{ page }}
                                </span>
                            {% else %}
                                <a href="{{ path('home', currentFilters|merge({page: page})) }}"
                                   class="relative inline-flex items-center px-4 py-3 border-l border-gray-200 dark:border-gray-600 bg-white dark:bg-gray-800 text-sm font-medium text-gray-700 dark:text-gray-300 hover:bg-gradient-to-r hover:from-blue-500 hover:to-blue-600 hover:text-white focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200 hover:border-blue-500 hover:shadow-md hover:-translate-y-0.5">
                                    {{ page }}
                                </a>
                            {% endif %}
                        {% endfor %}

                        {% if endPage < pagination.totalPages %}
                            {% if endPage < pagination.totalPages - 1 %}
                                <span class="relative inline-flex items-center px-4 py-3 border-l border-gray-200 dark:border-gray-600 bg-white dark:bg-gray-800 text-sm font-medium text-gray-500 dark:text-gray-400">
                                    <span class="animate-pulse">...</span>
                                </span>
                            {% endif %}
                            <a href="{{ path('home', currentFilters|merge({page: pagination.totalPages})) }}"
                               class="relative inline-flex items-center px-4 py-3 border-l border-gray-200 dark:border-gray-600 bg-white dark:bg-gray-800 text-sm font-medium text-gray-700 dark:text-gray-300 hover:bg-gradient-to-r hover:from-blue-500 hover:to-blue-600 hover:text-white focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200 hover:border-blue-500">
                                {{ pagination.totalPages }}
                            </a>
                        {% endif %}

                        <!-- Bouton Suivant -->
                        {% if pagination.hasNext %}
                            <a href="{{ path('home', currentFilters|merge({page: pagination.currentPage + 1})) }}"
                               class="relative inline-flex items-center px-4 py-3 border-l border-gray-200 dark:border-gray-600 bg-white dark:bg-gray-800 text-sm font-medium text-gray-600 dark:text-gray-300 hover:bg-gradient-to-r hover:from-blue-500 hover:to-blue-600 hover:text-white focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200 group">
                                <span class="sr-only">Suivant</span>
                                <svg class="h-5 w-5 group-hover:animate-pulse" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" >
