{% extends 'base.html.twig' %}

{% block title %}
    {% if sortie.id is defined %}
        Modifier
    {% else %}
        Créer
    {% endif %}
        une sortie - Sortir.com
{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <div class="max-w-4xl mx-auto">
        <!-- En-tête avec bouton retour -->
        <div class="flex justify-between items-center mb-8">
            <div>
                <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-2">
                    {% if sortie.id is defined %}
                        Modifier
                    {% else %}
                        Créer
                    {% endif %}
                        une sortie
                </h1>
                {% if sortie.id is not defined %}
                    <p class="text-gray-600 dark:text-gray-400">Proposez une nouvelle activité à votre groupe</p>
                {% endif %}
            </div>
            <a href="{{ path('home') }}" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg text-white bg-gradient-to-r from-gray-500 to-gray-600 hover:from-gray-600 hover:to-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 shadow-md hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200">
                <svg class="w-4 h-4 mr-2" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                </svg>
                Retour
            </a>
        </div>

        <div class="bg-white dark:bg-gray-800 shadow-lg rounded-lg overflow-hidden">
            <div class="bg-gradient-to-r from-blue-50 to-indigo-50 dark:from-gray-700 dark:to-gray-800 px-6 py-4 border-b border-gray-200 dark:border-gray-600">
                <h2 class="text-lg font-semibold text-gray-900 dark:text-white flex items-center">
                    <svg class="w-5 h-5 mr-2 text-blue-600 dark:text-blue-400" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                    </svg>
                    Informations de la sortie
                </h2>
            </div>

            <div class="p-8">
                <div class="mb-6">
                    {% for flashError in app.flashes('error') %}
                        <div class="mb-3 bg-red-50 dark:bg-red-900 border border-red-200 dark:border-red-700 rounded-lg p-4 flex items-start">
                            <svg class="w-5 h-5 text-red-500 dark:text-red-300 mr-3 flex-shrink-0 mt-0.5" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                            <span class="text-sm text-red-700 dark:text-red-200">{{ flashError }}</span>
                        </div>
                    {% endfor %}
                    {% for flashSuccess in app.flashes('success') %}
                        <div class="mb-3 bg-green-50 dark:bg-green-900 border border-green-200 dark:border-green-700 rounded-lg p-4 flex items-start">
                            <svg class="w-5 h-5 text-green-500 dark:text-green-300 mr-3 flex-shrink-0 mt-0.5" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                            <span class="text-sm text-green-700 dark:text-green-200">{{ flashSuccess }}</span>
                        </div>
                    {% endfor %}
                </div>

                {{ form_start(sortieForm, {'attr': {'data-turbo': 'false', 'class': 'space-y-8'}}) }}

                <!-- Section Informations générales -->
                <div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-6 border border-gray-200 dark:border-gray-600">
                    <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4 flex items-center">
                        <svg class="w-5 h-5 mr-2 text-blue-600 dark:text-blue-400" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        Informations générales
                    </h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="md:col-span-2">
                            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                <svg class="w-4 h-4 inline mr-1" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
                                </svg>
                                Nom de la sortie *
                            </label>
                            {{ form_widget(sortieForm.name, {'attr': {'class': 'w-full rounded-lg border-gray-300 dark:border-gray-600 dark:bg-gray-800 dark:text-white shadow-sm focus:border-blue-500 focus:ring-blue-500 focus:ring-2 transition-all duration-200 py-3 px-4 text-base', 'placeholder': 'Ex: Randonnée en forêt'}}) }}
                        </div>

                        <div>
                            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                <svg class="w-4 h-4 inline mr-1" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                </svg>
                                Date et heure de début *
                            </label>
                            {{ form_widget(sortieForm.startDateTime, {'attr': {'class': 'w-full rounded-lg border-gray-300 dark:border-gray-600 dark:bg-gray-800 dark:text-white shadow-sm focus:border-blue-500 focus:ring-blue-500 focus:ring-2 transition-all duration-200 py-3 px-4 text-base'}}) }}
                        </div>

                        <div>
                            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                <svg class="w-4 h-4 inline mr-1" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                                Durée (minutes) *
                            </label>
                            {{ form_widget(sortieForm.duration, {'attr': {'class': 'w-full rounded-lg border-gray-300 dark:border-gray-600 dark:bg-gray-800 dark:text-white shadow-sm focus:border-blue-500 focus:ring-blue-500 focus:ring-2 transition-all duration-200 py-3 px-4 text-base', 'placeholder': '120'}}) }}
                        </div>

                        <div>
                            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                <svg class="w-4 h-4 inline mr-1" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                                Date limite d'inscription *
                            </label>
                            {{ form_widget(sortieForm.registrationDeadline, {'attr': {'class': 'w-full rounded-lg border-gray-300 dark:border-gray-600 dark:bg-gray-800 dark:text-white shadow-sm focus:border-blue-500 focus:ring-blue-500 focus:ring-2 transition-all duration-200 py-3 px-4 text-base'}}) }}
                        </div>

                        <div>
                            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                <svg class="w-4 h-4 inline mr-1" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
                                </svg>
                                Nombre maximum de participants *
                            </label>
                            {{ form_widget(sortieForm.maxRegistration, {'attr': {'class': 'w-full rounded-lg border-gray-300 dark:border-gray-600 dark:bg-gray-800 dark:text-white shadow-sm focus:border-blue-500 focus:ring-blue-500 focus:ring-2 transition-all duration-200 py-3 px-4 text-base', 'placeholder': '10'}}) }}
                        </div>

                        <div class="md:col-span-2">
                            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                <svg class="w-4 h-4 inline mr-1" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
                                </svg>
                                Description
                            </label>
                            {{ form_widget(sortieForm.description, {'attr': {'class': 'w-full rounded-lg border-gray-300 dark:border-gray-600 dark:bg-gray-800 dark:text-white shadow-sm focus:border-blue-500 focus:ring-blue-500 focus:ring-2 transition-all duration-200 py-3 px-4 text-base', 'rows': '4', 'placeholder': 'Décrivez votre sortie...'}}) }}
                        </div>

                        <div class="md:col-span-2">
                            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                <svg class="w-4 h-4 inline mr-1" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                </svg>
                                Image de la sortie
                            </label>
                            {% if sortie.id is defined and sortie.imageFilename %}
                                <div class="mb-3">
                                    <img src="{{ asset('uploads/sorties/' ~ sortie.imageFilename) }}"
                                         alt="Image actuelle"
                                         class="max-w-xs rounded-lg shadow-md border border-gray-300 dark:border-gray-600">
                                    <p class="text-sm text-gray-500 dark:text-gray-400 mt-2">Image actuelle (sera remplacée si vous en téléchargez une nouvelle)</p>
                                </div>
                            {% endif %}
                            {{ form_widget(sortieForm.imageFile, {'attr': {'class': 'block w-full text-sm text-gray-900 dark:text-gray-300 border border-gray-300 dark:border-gray-600 rounded-lg cursor-pointer bg-gray-50 dark:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 p-2.5'}}) }}
                            <p class="mt-2 text-xs text-gray-500 dark:text-gray-400">PNG, JPG, GIF ou WebP (max. 2MB)</p>
                        </div>
                    </div>
                </div>

                <!-- Section Ville -->
                <div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-6 border border-gray-200 dark:border-gray-600">
                    <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4 flex items-center">
                        <svg class="w-5 h-5 mr-2 text-blue-600 dark:text-blue-400" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        </svg>
                        Lieu de la sortie
                    </h3>
                    <div class="space-y-4">
                        <div>
                            <div class="flex items-center justify-between mb-2">
                                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">
                                    <svg class="w-4 h-4 inline mr-1" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                    </svg>
                                    Sélectionner une ville *
                                </label>
                                <button type="button" id="add-city-btn" class="text-sm text-blue-600 hover:text-blue-800 font-medium flex items-center">
                                    <svg class="w-4 h-4 mr-1" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                                    </svg>
                                    Ajouter une ville
                                </button>
                            </div>
                            {{ form_widget(sortieForm.city, {'attr': {'class': 'w-full rounded-lg border-gray-300 dark:border-gray-600 dark:bg-gray-800 dark:text-white shadow-sm focus:border-blue-500 focus:ring-blue-500 focus:ring-2 transition-all duration-200 py-3 px-4 text-base'}}) }}
                        </div>

                        <!-- Modal pour ajouter une ville -->
                        <div id="city-modal-overlay" class="hidden fixed inset-0 bg-black/30 backdrop-blur-sm z-40"></div>

                        <div id="city-modal" class="hidden fixed inset-0 z-50 items-center justify-center p-4">
                            <div class="bg-white dark:bg-gray-700 rounded-xl shadow-2xl max-w-md w-full p-6 transform transition-all">
                                <div class="flex justify-between items-center mb-6">
                                    <h3 class="text-xl font-bold text-gray-900 dark:text-gray-300 flex items-center">
                                        <svg class="w-6 h-6 mr-2 text-blue-600" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                        </svg>
                                        Ajouter une ville
                                    </h3>
                                    <button type="button" id="close-modal" class="text-gray-400 hover:text-gray-600 hover:bg-gray-100 rounded-lg p-2 transition-colors">
                                        <svg class="w-6 h-6" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                                        </svg>
                                    </button>
                                </div>
                                <div class="space-y-4">
                                    <div>
                                        <label for="new-city-name" class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Nom de la ville *</label>
                                        <input type="text" id="new-city-name" class="w-full rounded-lg border-gray-300 dark:border-gray-600 dark:bg-gray-800 dark:text-white shadow-sm focus:border-blue-500 focus:ring-blue-500 focus:ring-2 py-3 px-4 transition-all" placeholder="Ex: Paris">
                                    </div>
                                    <div>
                                        <label class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2" for="new-city-postal">Code postal *</label>
                                        <input type="text" id="new-city-postal" class="w-full rounded-lg border-gray-300 dark:border-gray-600 dark:bg-gray-800 dark:text-white shadow-sm focus:border-blue-500 focus:ring-blue-500 focus:ring-2 py-3 px-4 transition-all" placeholder="Ex: 75000">
                                    </div>
                                    <div id="city-error" class="hidden bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg text-sm items-center">
                                        <svg class="w-5 h-5 mr-2 flex-shrink-0" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                        </svg>
                                        <span id="city-error-text"></span>
                                    </div>
                                    <div class="flex gap-3 justify-end pt-4">
                                        <button type="button" id="cancel-city" class="px-6 py-2.5 bg-gray-200 text-gray-800 rounded-lg hover:bg-gray-300 font-medium transition-colors">Annuler</button>
                                        <button type="button" id="save-city" class="px-6 py-2.5 bg-blue-600 text-white rounded-lg hover:bg-blue-700 font-medium transition-colors shadow-md hover:shadow-lg">Enregistrer</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Section Lieu -->
                        <div class="flex items-center justify-between mb-2">
                            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">
                                <svg class="w-4 h-4 inline mr-1" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                                </svg>
                                Sélectionner un lieu *
                            </label>
                            <button type="button" id="add-place-btn" class="text-sm text-blue-600 hover:text-blue-800 font-medium flex items-center">
                                <svg class="w-4 h-4 mr-1" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                                </svg>
                                Ajouter un lieu
                            </button>
                        </div>
                        {{ form_widget(sortieForm.place, {'attr': {'class': 'w-full rounded-lg border-gray-300 dark:border-gray-600 dark:bg-gray-800 dark:text-white shadow-sm focus:border-blue-500 focus:ring-blue-500 focus:ring-2 transition-all duration-200 py-3 px-4 text-base'}}) }}

                        <!-- Modal pour ajouter un lieu -->
                        <div id="place-modal-overlay" class="hidden fixed inset-0 bg-black/30 backdrop-blur-sm z-40"></div>

                        <div id="place-modal" class="hidden fixed inset-0 z-50 items-center justify-center p-4">
                            <div class="bg-white dark:bg-gray-700 rounded-xl shadow-2xl max-w-md w-full p-6 transform transition-all">
                                <div class="flex justify-between items-center mb-6">
                                    <h3 class="text-xl font-bold text-gray-900 dark:text-white flex items-center">
                                        <svg class="w-6 h-6 mr-2 text-blue-600 dark:text-blue-400" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                                        </svg>
                                        Ajouter un lieu
                                    </h3>
                                    <button type="button" id="close-place-modal" class="text-gray-400 hover:text-gray-600 dark:hover:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-lg p-2 transition-colors">
                                        <svg class="w-6 h-6" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                                        </svg>
                                    </button>
                                </div>
                                <div class="space-y-4">
                                    <div>
                                        <label class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2" for="new-place-name">Nom du lieu *</label>
                                        <input type="text" id="new-place-name" class="w-full rounded-lg border-gray-300 dark:border-gray-600 dark:bg-gray-800 dark:text-white shadow-sm focus:border-blue-500 focus:ring-blue-500 focus:ring-2 py-3 px-4 transition-all" placeholder="Ex: Parc des Buttes-Chaumont">
                                    </div>
                                    <div>
                                        <label class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2" for="new-place-street">Rue *</label>
                                        <input type="text" id="new-place-street" class="w-full rounded-lg border-gray-300 dark:border-gray-600 dark:bg-gray-800 dark:text-white shadow-sm focus:border-blue-500 focus:ring-blue-500 focus:ring-2 py-3 px-4 transition-all" placeholder="Ex: 1 rue Botzaris">
                                    </div>
                                    <div class="grid grid-cols-2 gap-4">
                                        <div>
                                            <label class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2" for="new-place-latitude">Latitude</label>
                                            <input type="text" id="new-place-latitude" class="w-full rounded-lg border-gray-300 dark:border-gray-600 dark:bg-gray-800 dark:text-white shadow-sm focus:border-blue-500 focus:ring-blue-500 focus:ring-2 py-3 px-4 transition-all" placeholder="48.8799">
                                        </div>
                                        <div>
                                            <label class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2" for="new-place-longitude">Longitude</label>
                                            <input type="text" id="new-place-longitude" class="w-full rounded-lg border-gray-300 dark:border-gray-600 dark:bg-gray-800 dark:text-white shadow-sm focus:border-blue-500 focus:ring-blue-500 focus:ring-2 py-3 px-4 transition-all" placeholder="2.3829">
                                        </div>
                                    </div>
                                    <div id="place-error" class="hidden bg-red-50 dark:bg-red-900 border border-red-200 dark:border-red-700 text-red-700 dark:text-red-200 px-4 py-3 rounded-lg text-sm items-center">
                                        <svg class="w-5 h-5 mr-2 flex-shrink-0" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                        </svg>
                                        <span id="place-error-text"></span>
                                    </div>
                                    <div class="flex gap-3 justify-end pt-4">
                                        <button type="button" id="cancel-place" class="px-6 py-2.5 bg-gray-200 dark:bg-gray-600 text-gray-800 dark:text-gray-300 rounded-lg hover:bg-gray-300 dark:hover:bg-gray-500 font-medium transition-colors">Annuler</button>
                                        <button type="button" id="save-place" class="px-6 py-2.5 bg-blue-600 text-white rounded-lg hover:bg-blue-700 font-medium transition-colors shadow-md hover:shadow-lg">Enregistrer</button>
                                    </div>
                                </div>
                            </div>
                        </div>


                        <div id="place-details" class="hidden bg-blue-50 dark:bg-sky-950 border border-blue-200 dark:border-blue-700 rounded-lg p-4">
                            <h4 class="text-sm font-semibold text-blue-900 dark:text-blue-100 mb-3 flex items-center">
                                <svg class="w-4 h-4 mr-2" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                                Détails du lieu
                            </h4>
                            <div class="grid grid-cols-1 sm:grid-cols-2 gap-3 text-sm">
                                <div class="flex items-start">
                                    <span class="font-medium text-gray-700 dark:text-gray-300 min-w-[100px]">Ville :</span>
                                    <span id="place-city" class="text-gray-900 dark:text-white"></span>
                                </div>
                                <div class="flex items-start">
                                    <span class="font-medium text-gray-700 dark:text-gray-300 min-w-[100px]">Code Postal :</span>
                                    <span id="place-cp" class="text-gray-900 dark:text-white"></span>
                                </div>
                                <div class="flex items-start sm:col-span-2">
                                    <span class="font-medium text-gray-700 dark:text-gray-300 min-w-[100px]">Rue :</span>
                                    <span id="place-street" class="text-gray-900 dark:text-white"></span>
                                </div>
                                <div class="flex items-start">
                                    <span class="font-medium text-gray-700 dark:text-gray-300 min-w-[100px]">Latitude :</span>
                                    <span id="place-latitude" class="text-gray-900 dark:text-white"></span>
                                </div>
                                <div class="flex items-start">
                                    <span class="font-medium text-gray-700 dark:text-gray-300 min-w-[100px]">Longitude :</span>
                                    <span id="place-longitude" class="text-gray-900 dark:text-white"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Boutons d'action -->
                <div class="bg-gradient-to-r from-gray-50 to-gray-100 dark:from-gray-700 dark:to-gray-800 rounded-lg p-6 border border-gray-200 dark:border-gray-600">
                    <div class="flex gap-4 justify-center flex-wrap">
                        <button type="submit" name="action" value="enregistrer" class="inline-flex items-center px-8 py-3 font-semibold text-base text-white bg-gradient-to-r from-blue-500 to-blue-600 rounded-lg shadow-md hover:from-blue-600 hover:to-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transform hover:-translate-y-0.5 transition-all duration-200">
                            <svg class="w-5 h-5 mr-2" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-3m-1 4l-3 3m0 0l-3-3m3 3V4"></path>
                            </svg>
                            Enregistrer
                        </button>
                    {% if sortie.id is not defined %}
                        <button type="submit" name="action" value="publier" class="inline-flex items-center px-8 py-3 font-semibold text-base text-white bg-gradient-to-r from-green-500 to-green-600 rounded-lg shadow-md hover:from-green-600 hover:to-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transform hover:-translate-y-0.5 transition-all duration-200">
                            <svg class="w-5 h-5 mr-2" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                            Publier la sortie
                        </button>
                    {% endif %}

                        <a href="
                                {% if sortie.id is defined %}
                                    {{ path('app_sortie_show', {id: sortie.id}) }}
                                {% else %}
                                    {{ path('home') }}
                                {% endif %}
                                " class="inline-flex items-center px-8 py-3 font-semibold text-base text-white bg-gradient-to-r from-red-500 to-red-600 rounded-lg shadow-md hover:from-red-600 hover:to-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transform hover:-translate-y-0.5 transition-all duration-200">
                            <svg class="w-5 h-5 mr-2" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                            </svg>
                            Annuler
                        </a>
                    </div>
                </div>

                {{ form_end(sortieForm) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}

