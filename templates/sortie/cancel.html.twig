{% extends 'base.html.twig' %}

{% block title %}Annuler une sortie - {{ sortie.name }} - Sortir.com{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    {% for type, messages in app.flashes %}
        {% for message in messages %}
            <div class="mb-4 px-4 py-3 rounded-lg {% if type == 'success' %}bg-green-100 border border-green-400 text-green-700{% elseif type == 'error' %}bg-red-100 border border-red-400 text-red-700{% else %}bg-blue-100 border border-blue-400 text-blue-700{% endif %}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    {% if not isOrganisateur and not is_granted('ROLE_ADMIN') %}
        <div class="max-w-6xl mx-auto">
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg">
                Vous n'avez pas l'autorisation d'annuler cette sortie.
            </div>
            <a href="{{ path('app_sortie_show', {id: sortie.id}) }}" class="inline-flex items-center mt-4 px-4 py-2 border border-transparent text-sm font-medium rounded-lg text-white bg-gradient-to-r from-blue-500 to-blue-600 hover:from-blue-600 hover:to-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 shadow-md hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200">
                <svg class="w-4 h-4 mr-2" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                </svg>
                Retour à la sortie
            </a>
        </div>
    {% else %}
        <div class="max-w-6xl mx-auto">
            <!-- En-tête avec bouton retour -->
            <div class="flex justify-between items-center mb-8">
                <a href="{{ path('app_sortie_show', {id: sortie.id}) }}" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg text-white bg-gradient-to-r from-gray-500 to-gray-600 hover:from-gray-600 hover:to-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 shadow-md hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200">
                    <svg class="w-4 h-4 mr-2" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                    </svg>
                    Retour à la sortie
                </a>

                <div class="text-sm text-gray-500">
                    Annulation de sortie
                </div>
            </div>

            <!-- Carte principale -->
            <div class="bg-white shadow-lg rounded-lg overflow-hidden">
                <!-- En-tête de la carte -->
                <div class="bg-gradient-to-r from-red-50 to-orange-50 px-6 py-4 border-b border-gray-200">
                    <div class="flex justify-between items-center">
                        <h1 class="text-2xl font-bold text-gray-900">Annuler une sortie</h1>
                        {% if sortie.state %}
                            {% set stateClass = '' %}
                            {% if sortie.state.value == 'Ouverte' %}
                                {% set stateClass = 'bg-green-100 text-green-800' %}
                            {% elseif sortie.state.value == 'Créée' %}
                                {% set stateClass = 'bg-blue-100 text-blue-800' %}
                            {% elseif sortie.state.value == 'Clôturée' %}
                                {% set stateClass = 'bg-orange-100 text-orange-800' %}
                            {% elseif sortie.state.value == 'Activité en cours' %}
                                {% set stateClass = 'bg-purple-100 text-purple-800' %}
                            {% elseif sortie.state.value == 'Passée' %}
                                {% set stateClass = 'bg-gray-100 text-gray-800' %}
                            {% elseif sortie.state.value == 'Annulée' %}
                                {% set stateClass = 'bg-red-100 text-red-800' %}
                            {% endif %}
                            <span class="inline-flex px-3 py-1 text-sm font-semibold rounded-full {{ stateClass }}">
                                {{ sortie.state.value }}
                            </span>
                        {% endif %}
                    </div>
                </div>

                <!-- Contenu de la carte -->
                <div class="p-6">
                    {{ form_start(cancelForm) }}

                    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
                        <!-- Informations générales -->
                        <div class="space-y-6">
                            <div>
                                <h2 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
                                    <svg class="w-5 h-5 mr-2 text-blue-600" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                    </svg>
                                    Informations générales
                                </h2>
                                <div class="bg-gray-50 rounded-lg p-4 space-y-3">
                                    <div class="flex justify-between">
                                        <span class="text-sm font-medium text-gray-600">Nom de la sortie :</span>
                                        <span class="text-sm text-gray-900 font-semibold">{{ sortie.name }}</span>
                                    </div>
                                    <div class="flex justify-between">
                                        <span class="text-sm font-medium text-gray-600">Date de la sortie :</span>
                                        <span class="text-sm text-gray-900">{{ sortie.startDateTime|date('d/m/Y à H:i') }}</span>
                                    </div>
                                    <div class="flex justify-between">
                                        <span class="text-sm font-medium text-gray-600">Site organisateur :</span>
                                        <span class="text-sm text-gray-900">{{ sortie.site.name }}</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Informations du lieu -->
                        <div class="space-y-6">
                            <div>
                                <h2 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
                                    <svg class="w-5 h-5 mr-2 text-blue-600" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                    </svg>
                                    Lieu
                                </h2>
                                <div class="bg-gray-50 rounded-lg p-4 space-y-3">
                                    <div class="flex justify-between">
                                        <span class="text-sm font-medium text-gray-600">Lieu :</span>
                                        <span class="text-sm text-gray-900 font-medium">{{ sortie.place.name }}</span>
                                    </div>
                                    <div class="flex justify-between">
                                        <span class="text-sm font-medium text-gray-600">Rue :</span>
                                        <span class="text-sm text-gray-900">{{ sortie.place.street }}</span>
                                    </div>
                                    <div class="flex justify-between">
                                        <span class="text-sm font-medium text-gray-600">Code postal :</span>
                                        <span class="text-sm text-gray-900">{{ sortie.place.city.postalCode }}</span>
                                    </div>
                                    <div class="flex justify-between">
                                        <span class="text-sm font-medium text-gray-600">Ville :</span>
                                        <span class="text-sm text-gray-900">{{ sortie.place.city.name }}</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Motif d'annulation -->
                    <div class="mt-8">
                        <h2 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
                            <svg class="w-5 h-5 mr-2 text-red-600" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                            </svg>
                            Motif d'annulation
                        </h2>
                        <div class="bg-red-50 border border-red-200 rounded-lg p-4">
                            {{ form_label(cancelForm.motif, 'Veuillez indiquer le motif de l\'annulation', { 'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                            {{ form_widget(cancelForm.motif, { 'attr': {'class': 'w-full border border-gray-300 rounded-lg p-3 focus:ring-2 focus:ring-red-500 focus:border-red-500', 'rows': '5'}}) }}
                            <div class="text-red-600 font-semibold text-sm mt-2">{{ form_errors(cancelForm.motif) }}</div>
                        </div>
                    </div>

                    <!-- Boutons d'action -->
                    <div class="flex gap-4 justify-center mt-8 pt-6 border-t border-gray-200">
                        <button type="submit" class="inline-flex items-center px-6 py-3 border border-transparent text-sm font-medium rounded-lg text-white bg-gradient-to-r from-red-500 to-red-600 hover:from-red-600 hover:to-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 shadow-md hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200">
                            <svg class="w-4 h-4 mr-2" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                            </svg>
                            Confirmer l'annulation
                        </button>
                        <a href="{{ path('app_sortie_show', {id: sortie.id}) }}" class="inline-flex items-center px-6 py-3 border border-gray-300 text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 shadow-md hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200">
                            <svg class="w-4 h-4 mr-2" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                            </svg>
                            Annuler
                        </a>
                    </div>

                    {{ form_end(cancelForm) }}
                </div>
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}