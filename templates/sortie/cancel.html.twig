{% extends 'base.html.twig' %}

{% block title %}Cr√©er une sortie | {{ parent() }}{% endblock %}

{% block body %}
    <section>
        <h1 class="text-2xl text-center my-5">Annuler une sortie</h1>
        {{ form_start(cancelForm) }}
        <div class="grid grid-cols-3 gap-4 max-w-2xl p-3 mx-auto my-6 items-center">
            <p class="font-semibold">Nom de la sortie</p>
            <p class="col-span-2">{{ sortie.name }}</p>
            <p class="font-semibold">Date de la sortie</p>
            <p class="col-span-2">{{ sortie.startDateTime | date("d/m/Y") }}</p>
            <p class="font-semibold">Site organisateur</p>
            <p class="col-span-2">{{ sortie.site.name }}</p>
            <p class="font-semibold">Lieu</p>
            {% set place = sortie.place %}
            {% set city = sortie.place.city %}
            <p class="col-span-2">{{ place.name }} {{ place.street }} {{ city.postalCode }} {{ city.name }}</p>
            {{ form_label(cancelForm.motif, null, { 'label_attr': {'class': 'font-semibold'}}) }}
            {{ form_widget(cancelForm.motif, { 'attr': {'class': 'border border-gray-400 rounded p-1 col-span-2'}}) }}
            <div class="text-red-500 font-semibold text-sm">{{ form_errors(cancelForm.motif) }}</div>
        </div>
        <div class="flex gap-4 justify-center">
            <button type="submit" class="px-3 py-2 font-semibold text-md text-white bg-blue-400 rounded shadow-md text-shadow">Enregistrer</button>
            <button class="px-3 py-2 font-semibold text-md text-white bg-red-500 rounded shadow-md text-shadow">Annuler</button>
        </div>
        {{ form_end(cancelForm) }}
    </section>
{% endblock %}