{% extends 'base.html.twig' %}

{% block title %}{{ sortie.name }} - Sortir.com{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <div class="max-w-6xl mx-auto">
        <!-- En-tête avec bouton retour -->
        <div class="flex justify-between items-center mb-8">
            <a href="{{ path('home') }}" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg text-white bg-gradient-to-r from-gray-500 to-gray-600 hover:from-gray-600 hover:to-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 shadow-md hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200">
                <svg class="w-4 h-4 mr-2" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                </svg>
                Retour à l'accueil
            </a>

            <div class="text-sm text-gray-500">
                Détails de la sortie
            </div>
        </div>

        <!-- Carte principale -->
        <div class="bg-white shadow-lg rounded-lg overflow-hidden">
            <!-- En-tête de la carte -->
            <div class="bg-gradient-to-r from-blue-50 to-indigo-50 px-6 py-4 border-b border-gray-200">
                <div class="flex justify-between items-center">
                    <h1 class="text-2xl font-bold text-gray-900">{{ sortie.name }}</h1>
                    {% if sortie.state %}
                        {% set stateClass = '' %}
                        {% if sortie.state.value == 'Ouverte' %}
                            {% set stateClass = 'bg-green-100 text-green-800' %}
                        {% elseif sortie.state.value == 'Créée' %}
                            {% set stateClass = 'bg-blue-100 text-blue-800' %}
                        {% elseif sortie.state.value == 'Clôturée' %}
                            {% set stateClass = 'bg-orange-100 text-orange-800' %}
                        {% elseif sortie.state.value == 'Activité en cours' %}
                            {% set stateClass = 'bg-purple-100 text-purple-800' %}
                        {% elseif sortie.state.value == 'Passée' %}
                            {% set stateClass = 'bg-gray-100 text-gray-800' %}
                        {% elseif sortie.state.value == 'Annulée' %}
                            {% set stateClass = 'bg-red-100 text-red-800' %}
                        {% endif %}
                        <span class="inline-flex px-3 py-1 text-sm font-semibold rounded-full {{ stateClass }}">
                            {{ sortie.state.value }}
                        </span>
                    {% endif %}
                </div>
            </div>

            <!-- Contenu de la carte -->
            <div class="p-6">
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
                    <!-- Informations générales -->
                    <div class="space-y-6">
                        <div>
                            <h2 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
                                <svg class="w-5 h-5 mr-2 text-blue-600" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                                Informations générales
                            </h2>
                            <div class="bg-gray-50 rounded-lg p-4 space-y-3">
                                <div class="flex justify-between">
                                    <span class="text-sm font-medium text-gray-600">Date et heure de début :</span>
                                    <span class="text-sm text-gray-900">{{ sortie.startDateTime|date('d/m/Y à H:i') }}</span>
                                </div>
                                <div class="flex justify-between">
                                    <span class="text-sm font-medium text-gray-600">Durée :</span>
                                    <span class="text-sm text-gray-900">
                                        {{ (sortie.duration / 60)|round(0) }}h {{ sortie.duration % 60 }}min
                                    </span>
                                </div>
                                <div class="flex justify-between">
                                    <span class="text-sm font-medium text-gray-600">Date limite d'inscription :</span>
                                    <span class="text-sm text-gray-900">{{ sortie.registrationDeadline|date('d/m/Y') }}</span>
                                </div>
                                <div class="flex justify-between">
                                    <span class="text-sm font-medium text-gray-600">Nombre d'inscrits :</span>
                                    <span class="text-sm text-gray-900">
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800">
                                            {{ nombreParticipants }} / {{ sortie.maxRegistration }}
                                        </span>
                                    </span>
                                </div>
                                <div class="flex justify-between">
                                    <span class="text-sm font-medium text-gray-600">Organisateur :</span>
                                    <a href="{{ path('view_user_profil', {id: sortie.organisateur.id}) }}"
                                       class="text-sm text-blue-600 hover:text-blue-800 hover:underline font-medium transition-colors duration-200">
                                        {{ sortie.organisateur.pseudo }}
                                    </a>
                                </div>
                                <div class="flex justify-between">
                                    <span class="text-sm font-medium text-gray-600">Site organisateur :</span>
                                    <span class="text-sm text-gray-900">{{ sortie.site.name }}</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Informations du lieu -->
                    <div class="space-y-6">
                        <div>
                            <h2 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
                                <svg class="w-5 h-5 mr-2 text-blue-600" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                </svg>
                                Lieu
                            </h2>
                            <div class="bg-gray-50 rounded-lg p-4 space-y-3">
                                <div class="flex justify-between">
                                    <span class="text-sm font-medium text-gray-600">Lieu :</span>
                                    <span class="text-sm text-gray-900 font-medium">{{ sortie.place.name }}</span>
                                </div>
                                <div class="flex justify-between">
                                    <span class="text-sm font-medium text-gray-600">Rue :</span>
                                    <span class="text-sm text-gray-900">{{ sortie.place.street }}</span>
                                </div>
                                <div class="flex justify-between">
                                    <span class="text-sm font-medium text-gray-600">Code postal :</span>
                                    <span class="text-sm text-gray-900">{{ sortie.place.city.postalCode }}</span>
                                </div>
                                <div class="flex justify-between">
                                    <span class="text-sm font-medium text-gray-600">Ville :</span>
                                    <span class="text-sm text-gray-900">{{ sortie.place.city.name }}</span>
                                </div>
                                {% if sortie.place.latitude and sortie.place.longitude %}
                                <div class="flex justify-between">
                                    <span class="text-sm font-medium text-gray-600">Coordonnées :</span>
                                    <span class="text-sm text-gray-900">{{ sortie.place.latitude }}, {{ sortie.place.longitude }}</span>
                                </div>
                                {% endif %}
                            </div>
                        </div>

                        {% if weather %}
                        <!-- Météo du jour de la sortie -->
                        <div>
                            <h2 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
                                <svg class="w-5 h-5 mr-2 text-blue-600" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z"></path>
                                </svg>
                                Météo prévue
                            </h2>
                            <div class="bg-gradient-to-br from-blue-50 to-indigo-50 rounded-lg p-4 border border-blue-200">
                                {% if weather.weather is defined %}
                                    <div class="flex items-center justify-between">
                                        <div class="flex items-center space-x-4">
                                            <img src="https://openweathermap.org/img/wn/{{ weather.weather[0].icon }}@2x.png"
                                                 alt="{{ weather.weather[0].description }}"
                                                 class="w-16 h-16">
                                            <div>
                                                <div class="text-3xl font-bold text-gray-900">{{ weather.main.temp|round }}°C</div>
                                                <div class="text-sm text-gray-600 capitalize">{{ weather.weather[0].description }}</div>
                                            </div>
                                        </div>
                                        <div class="text-right space-y-1">
                                            <div class="text-xs text-gray-600">Ressenti: <span class="font-semibold">{{ weather.main.feels_like|round }}°C</span></div>
                                            <div class="text-xs text-gray-600">Humidité: <span class="font-semibold">{{ weather.main.humidity }}%</span></div>
                                            {% if weather.wind is defined %}
                                                <div class="text-xs text-gray-600">Vent: <span class="font-semibold">{{ (weather.wind.speed * 3.6)|round(1) }} km/h</span></div>
                                            {% endif %}
                                        </div>
                                    </div>
                                {% elseif weather.list is defined %}
                                    {# Pour les prévisions (forecast API) #}
                                    <div class="flex items-center justify-between">
                                        <div class="flex items-center space-x-4">
                                            <img src="https://openweathermap.org/img/wn/{{ weather.list[0].weather[0].icon }}@2x.png"
                                                 alt="{{ weather.list[0].weather[0].description }}"
                                                 class="w-16 h-16">
                                            <div>
                                                <div class="text-3xl font-bold text-gray-900">{{ weather.list[0].main.temp|round }}°C</div>
                                                <div class="text-sm text-gray-600 capitalize">{{ weather.list[0].weather[0].description }}</div>
                                            </div>
                                        </div>
                                        <div class="text-right space-y-1">
                                            <div class="text-xs text-gray-600">Ressenti: <span class="font-semibold">{{ weather.list[0].main.feels_like|round }}°C</span></div>
                                            <div class="text-xs text-gray-600">Humidité: <span class="font-semibold">{{ weather.list[0].main.humidity }}%</span></div>
                                            {% if weather.list[0].wind is defined %}
                                                <div class="text-xs text-gray-600">Vent: <span class="font-semibold">{{ (weather.list[0].wind.speed * 3.6)|round(1) }} km/h</span></div>
                                            {% endif %}
                                        </div>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                        {% endif %}
                    </div>
                </div>

                {% if sortie.description %}
                <!-- Description -->
                <div class="mt-8">
                    <h2 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
                        <svg class="w-5 h-5 mr-2 text-blue-600" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                        </svg>
                        Description
                    </h2>
                    <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
                        <div class="text-sm text-gray-800 whitespace-pre-line sortie-description">{{ sortie.description }}</div>
                    </div>
                </div>
                {% endif %}

                {% if sortie.participants|length > 0 %}
                <!-- Liste des participants -->
                <div class="mt-8">
                    <h2 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
                        <svg class="w-5 h-5 mr-2 text-blue-600" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
                        </svg>
                        Liste des participants ({{ nombreParticipants }})
                    </h2>
                    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-3" id="participants-list">
                        {% for participant in sortie.participants %}
                        <a href="{{ path('view_user_profil', {id: participant.id}) }}"
                           class="bg-gray-50 hover:bg-blue-50 rounded-lg p-3 flex items-center justify-between transition-colors duration-200 border border-transparent hover:border-blue-200">
                            <span class="text-sm font-medium text-blue-600 hover:text-blue-800">{{ participant.pseudo }}</span>
                            {% if participant == sortie.organisateur %}
                                <svg class="w-4 h-4 text-yellow-500" viewBox="0 0 20 20" title="Organisateur">
                                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.286 3.957a1 1 0 00.95.69h4.162c.969 0 1.371 1.24.588 1.81l-3.37 2.448a1 1 0 00-.364 1.118l1.286 3.957c.3.921-.755 1.688-1.54 1.118l-3.37-2.448a1 1 0 00-1.175 0l-3.37 2.448c-.784.57-1.838-.197-1.539-1.118l1.286-3.957a1 1 0 00-.364-1.118L2.049 9.384c-.783-.57-.38-1.81.588-1.81h4.162a1 1 0 00.95-.69l1.286-3.957z"></path>
                                </svg>
                            {% endif %}
                        </a>
                        {% endfor %}
                    </div>
                </div>
                {% endif %}
            </div>

            <!-- Pied de carte avec actions -->
            <div class="bg-gradient-to-r from-gray-50 to-gray-100 px-6 py-4 border-t border-gray-200">
                <div class="flex flex-col sm:flex-row justify-between items-center gap-4">
                    <div class="text-sm text-gray-600">
                        Dernière mise à jour : {{ "now"|date('d/m/Y à H:i') }}
                    </div>

                    <div class="flex flex-col sm:flex-row gap-3">
                        {% if isOrganisateur and sortie.state.value == 'Créée' %}
                            <form action="{{ path('app_sortie_publier', {id: sortie.id}) }}" method="post" class="inline">
                                <input type="hidden" name="_token" value="{{ csrf_token('publier_' ~ sortie.id) }}">
                                <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg text-white bg-gradient-to-r from-green-500 to-green-600 hover:from-green-600 hover:to-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 shadow-md hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200">
                                    <svg class="w-4 h-4 mr-2" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                    </svg>
                                    Ouvrir aux inscriptions
                                </button>
                            </form>
                        {% endif %}

                        {% if is_granted('SORTIE_CANCEL', sortie) %}
                            <a href="{{ path('app_sortie_cancel', {id: sortie.id}) }}"
                               class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg text-white bg-gradient-to-r from-red-500 to-red-600 hover:from-red-600 hover:to-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 shadow-md hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200">
                                <svg class="w-4 h-4 mr-2" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                                </svg>
                                Annuler la sortie
                            </a>
                        {% endif %}

                        {% if is_granted('SORTIE_EDIT', sortie) %}
                            <a href="{{ path('app_sortie_edit', {id: sortie.id}) }}"
                               class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg text-white bg-gradient-to-r from-blue-500 to-blue-600 hover:from-blue-600 hover:to-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 shadow-md hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200">
                                <svg class="w-4 h-4 mr-2"  stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                </svg>
                                Modifier la sortie
                            </a>
                        {% endif %}
                        {% if is_granted('SORTIE_DELETE', sortie) %}
                            <form action="{{ path('app_sortie_delete', {id: sortie.id}) }}" method="post" class="inline" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette sortie ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete_' ~ sortie.id) }}">
                                <button type="submit" class="inline-flex h-full items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg text-white bg-gradient-to-r from-gray-500 to-gray-600 hover:from-gray-600 hover:to-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 shadow-md hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200">
                                    <svg class="w-4 h-4 mr-2" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                    </svg>
                                    Supprimer
                                </button>
                            </form>
                        {% endif %}

                        {% if is_granted('SORTIE_REGISTER', sortie) %}
                            <form action="{{ path('app_sortie_inscription', {id: sortie.id}) }}" method="post" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg text-white bg-gradient-to-r from-green-500 to-green-600 hover:from-green-600 hover:to-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 shadow-md hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200">
                                <svg class="w-4 h-4 mr-2" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                                </svg>
                                <input type="hidden" name="_token" value="{{ csrf_token('inscription_' ~ sortie.id) }}">
                                <button type="submit">S'inscrire</button>
                            </form>
                        {% elseif not isParticipant and not isOrganisateur and sortie.state.value == 'Ouverte' and inscriptionsCloturees %}
                            <div class="inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-lg text-gray-500 bg-gray-100 cursor-not-allowed">
                                <svg class="w-4 h-4 mr-2" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                                Inscriptions clôturées
                            </div>
                        {% elseif isParticipant and sortie.state.value == 'Ouverte' %}
                            <form action="{{ path('app_sortie_desinscrire', {id: sortie.id}) }}" method="post" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg text-white bg-gradient-to-r from-yellow-500 to-yellow-600 hover:from-yellow-600 hover:to-yellow-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yellow-500 shadow-md hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200">
                                <svg class="w-4 h-4 mr-2" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4"></path>
                                </svg>
                                <input type="hidden" name="_token" value="{{ csrf_token('desinscrire_' ~ sortie.id) }}">
                                <button type="submit">Se désister</button>
                            </form>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% if is_granted('COMMENT_CREATE', newComment) %}
        <div class="text-center my-5">
            <button id="addCommentBtn" class="px-4 py-2 border border-transparent text-sm font-medium rounded-lg text-white bg-gradient-to-r from-blue-500 to-blue-600 hover:from-blue-600 hover:to-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 shadow-md hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200">Ajouter un commentaire</button>
        </div>
        <div id="commentForm" class="max-w-2xl mx-auto mt-5 bg-white shadow-lg rounded-lg p-2 border border-gray-200 hidden">
            {{ form_start(commentForm) }}
            <div  class="grid gap-1 ">
                {{ form_label(commentForm.content, null, {'label_attr': {'class' : 'font-semibold'}}) }}
                {{ form_widget(commentForm.content, {'attr': {'class' : 'border border-gray-300 rounded p-1 h-25'}}) }}
                {{ form_errors(commentForm.content, {'attr': {'class' : ''}}) }}
                <div class="text-end mt-1">
                    <button type="button" class="px-4 py-2 border border-transparent text-sm font-medium rounded-lg text-white bg-gradient-to-r from-red-500 to-red-600 hover:from-red-600 hover:to-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 shadow-md hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200">Annuler</button>
                    <button type="submit" class="px-4 py-2 border border-transparent text-sm font-medium rounded-lg text-white bg-gradient-to-r from-blue-500 to-blue-600 hover:from-blue-600 hover:to-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 shadow-md hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200">Commenter</button>
                </div>
            </div>
            {{ form_end(commentForm) }}
        </div>
    {% endif %}
    {% if comments is not empty %}
        <div class="max-w-2xl mx-auto">
            <h2 class="font-semibold text-xl my-5">Commentaires : </h2>
            <div id="commentsContainer">
                {% for comment in comments %}
                    <div class="comment-container rounded shadow-lg border border-gray-200 p-2 mb-4">
                        <div class="comment-display">
                            {% set userPhoto = comment.user.photoFilename %}
                            <div class="flex gap-2 items-center">
                                <div class="h-10 w-10">
                                    <img src="
                                        {% if userPhoto %}
                                            {{ asset('uploads/photos/'~userPhoto) }}
                                        {% else %}
                                            {{ asset('images/Avatar.png') }}
                                        {% endif %}
                                        "
                                         alt="photo de profil de {{ comment.user.pseudo }}"
                                         class="h-10 w-10 rounded-full object-cover">
                                </div>
                                <a href="{{ path('view_user_profil', {id: comment.user.id}) }}" class="font-semibold hover:text-blue-500">
                                    {{ comment.user.pseudo }}
                                </a>
                            </div>
                            <p class="p-3 whitespace-pre-wrap">{{ comment.content }}</p>
                            <div class="text-end text-gray-500">
                                {% if is_granted('COMMENT_EDIT', comment) %}
                                    <button class="edit-comment-btn px-4 py-2 border border-transparent text-sm font-medium rounded-lg text-white bg-gradient-to-r from-blue-500 to-blue-600 hover:from-blue-600 hover:to-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 shadow-md hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200" data-comment-id="{{ comment.id }}">Modifier</button>
                                {% endif %}
                                {% if is_granted('COMMENT_DELETE', comment) %}
                                    <form action="{{ path('app_comment_delete', {id: comment.id}) }}" method="post" class="inline-flex" onsubmit="return confirm('Êtes vous sûr de vouloir supprimer le commentaire :\n{{ comment.content|escape('js') }}')">
                                        <button class="px-4 py-2 border border-transparent text-sm font-medium rounded-lg text-white bg-gradient-to-r from-red-500 to-red-600 hover:from-red-600 hover:to-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 shadow-md hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200" type="submit">Supprimer</button>
                                        <input type="hidden" name="redirect" value="{{ path('app_sortie_show', {id: sortie.id}) }}">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete_'~comment.id) }}">
                                    </form>
                                {% endif %}
                                <span class="italic">
                                    {{ comment.createdAt|date('d/m/Y à H:i') }}
                                    {% if comment.createdAt < comment.updatedAt %}
                                        (modifié)
                                    {% endif %}
                                </span>

                            </div>
                        </div>

                        <div class="comment-edit hidden">
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}
