{% extends 'base.html.twig' %}

{% block title %}{{ user.pseudo }} - Profil{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <div class="max-w-4xl mx-auto">
        <!-- En-tête avec bouton retour -->
        <div class="flex justify-between items-center mb-8">
            <a href="javascript:history.back()" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg text-white bg-gradient-to-r from-gray-500 to-gray-600 hover:from-gray-600 hover:to-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 shadow-md hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200 dark:focus:ring-offset-gray-800">
                <svg class="w-4 h-4 mr-2" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                </svg>
                Retour
            </a>

            <div class="text-sm text-gray-500 dark:text-gray-400">
                Profil du participant
            </div>
        </div>

        <!-- Carte du profil -->
        <div class="bg-white dark:bg-gray-800 shadow-lg rounded-lg overflow-hidden">
            <!-- En-tête de la carte -->
            <div class="bg-gradient-to-r from-blue-50 to-indigo-50 dark:from-gray-700 dark:to-gray-800 px-6 py-6 border-b border-gray-200 dark:border-gray-700">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        {% if user.photoFilename %}
                        <img src="{{ asset('uploads/photos/' ~ user.photoFilename) }}"
                             alt="Photo de profil"
                             class="w-20 h-20 rounded-full object-cover shadow-lg border-2 border-white dark:border-gray-800">
                        {% else %}
                            <div class="w-20 h-20 rounded-full bg-gradient-to-r from-blue-500 to-indigo-600 flex items-center justify-center text-white text-3xl font-bold shadow-lg">
                                <img src="{{ asset('images/Avatar.png') }}"
                                     alt="Photo de profil"
                                     class="w-20 h-20 rounded-full object-cover shadow-lg border-2 border-white dark:border-gray-800">
                            </div>
                        {% endif %}
                    </div>
                    <div class="ml-6">
                        <h1 class="text-3xl font-bold text-gray-900 dark:text-white">{{ user.pseudo }}</h1>
                        <p class="text-sm text-gray-600 dark:text-gray-400 mt-1">{{ user.firstName }} {{ user.lastName }}</p>
                    </div>
                </div>
            </div>

            <!-- Contenu de la carte -->
            <div class="p-6">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Informations personnelles -->
                    <div class="space-y-4">
                        <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4 flex items-center">
                            <svg class="w-5 h-5 mr-2 text-blue-600 dark:text-blue-400" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                            </svg>
                            Informations personnelles
                        </h2>
                        <div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-4 space-y-3">
                            <div class="flex items-start">
                                <svg class="w-5 h-5 mr-3 text-gray-400 dark:text-gray-500 mt-0.5" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                </svg>
                                <div class="flex-1">
                                    <span class="text-sm font-medium text-gray-600 dark:text-gray-400 block">Pseudo</span>
                                    <span class="text-sm text-gray-900 dark:text-white">{{ user.pseudo }}</span>
                                </div>
                            </div>

                            <div class="flex items-start">
                                <svg class="w-5 h-5 mr-3 text-gray-400 dark:text-gray-500 mt-0.5" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"></path>
                                </svg>
                                <div class="flex-1">
                                    <span class="text-sm font-medium text-gray-600 dark:text-gray-400 block">Email</span>
                                    <span class="text-sm text-gray-900 dark:text-white">{{ user.email }}</span>
                                </div>
                            </div>

                            <div class="flex items-start">
                                <svg class="w-5 h-5 mr-3 text-gray-400 dark:text-gray-500 mt-0.5" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                                </svg>
                                <div class="flex-1">
                                    <span class="text-sm font-medium text-gray-600 dark:text-gray-400 block">Téléphone</span>
                                    <span class="text-sm text-gray-900 dark:text-white">{{ user.phone }}</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Informations sur le site -->
                    <div class="space-y-4">
                        <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4 flex items-center">
                            <svg class="w-5 h-5 mr-2 text-blue-600 dark:text-blue-400" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                            </svg>
                            Informations du site
                        </h2>
                        <div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-4 space-y-3">
                            <div class="flex items-start">
                                <svg class="w-5 h-5 mr-3 text-gray-400 dark:text-gray-500 mt-0.5" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                                </svg>
                                <div class="flex-1">
                                    <span class="text-sm font-medium text-gray-600 dark:text-gray-400 block">Site rattaché</span>
                                    <span class="text-sm text-gray-900 dark:text-white font-medium">{{ user.site ? user.site.name : 'Non défini' }}</span>
                                </div>
                            </div>

                            <div class="flex items-start">
                                <svg class="w-5 h-5 mr-3 text-gray-400 dark:text-gray-500 mt-0.5" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                                <div class="flex-1">
                                    <span class="text-sm font-medium text-gray-600 dark:text-gray-400 block">Statut du compte</span>
                                    {% if user.active %}
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300">
                                            <svg class="w-3 h-3 mr-1" viewBox="0 0 20 20">
                                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                                            </svg>
                                            Actif
                                        </span>
                                    {% else %}
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800 dark:bg-gray-600 dark:text-gray-300">
                                            <svg class="w-3 h-3 mr-1" viewBox="0 0 20 20">
                                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
                                            </svg>
                                            Inactif
                                        </span>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Statistiques sur les sorties -->
                <div class="mt-8">
                    <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4 flex items-center">
                        <svg class="w-5 h-5 mr-2 text-blue-600 dark:text-blue-400" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                        </svg>
                        Activité
                    </h2>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div class="bg-gradient-to-r from-blue-50 to-indigo-50 dark:from-gray-700 dark:to-gray-800 rounded-lg p-4 border border-blue-200 dark:border-gray-600">
                            <div class="flex items-center justify-between">
                                <div>
                                    <p class="text-sm font-medium text-gray-600 dark:text-gray-400">Sorties organisées</p>
                                    <p class="text-2xl font-bold text-blue-600 dark:text-blue-400 mt-1">{{ user.sortiesOrganisees|length }}</p>
                                </div>
                                <div class="w-12 h-12 bg-blue-100 dark:bg-gray-600 rounded-full flex items-center justify-center">
                                    <svg class="w-6 h-6 text-blue-600 dark:text-blue-400" viewBox="0 0 20 20">
                                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.286 3.957a1 1 0 00.95.69h4.162c.969 0 1.371 1.24.588 1.81l-3.37 2.448a1 1 0 00-.364 1.118l1.286 3.957c.3.921-.755 1.688-1.54 1.118l-3.37-2.448a1 1 0 00-1.175 0l-3.37 2.448c-.784.57-1.838-.197-1.539-1.118l1.286-3.957a1 1 0 00-.364-1.118L2.049 9.384c-.783-.57-.38-1.81.588-1.81h4.162a1 1 0 00.95-.69l1.286-3.957z"></path>
                                    </svg>
                                </div>
                            </div>
                        </div>

                        <div class="bg-gradient-to-r from-green-50 to-emerald-50 dark:from-gray-700 dark:to-gray-800 rounded-lg p-4 border border-green-200 dark:border-gray-600">
                            <div class="flex items-center justify-between">
                                <div>
                                    <p class="text-sm font-medium text-gray-600 dark:text-gray-400">Participations</p>
                                    <p class="text-2xl font-bold text-green-600 dark:text-green-400 mt-1">{{ user.sorties|length }}</p>
                                </div>
                                <div class="w-12 h-12 bg-green-100 dark:bg-gray-600 rounded-full flex items-center justify-center">
                                    <svg class="w-6 h-6 text-green-600 dark:text-green-400" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
                                    </svg>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Pied de carte -->
            <div class="bg-gradient-to-r from-gray-50 to-gray-100 dark:from-gray-700 dark:to-gray-800 px-6 py-4 border-t border-gray-200 dark:border-gray-700">
                <div class="flex justify-center gap-3">
                    {% if app.user and app.user.id != user.id %}
                        <a href="{{ path('app_chat_new_user', {id: user.id}) }}" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg text-white bg-gradient-to-r from-blue-500 to-blue-600 hover:from-blue-600 hover:to-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 shadow-md hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200">
                            <svg class="w-5 h-5 mr-2" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                            </svg>
                            Envoyer un message
                        </a>
                    {% endif %}
                    <a href="javascript:history.back()" class="inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 shadow-sm transition-all duration-200 dark:bg-gray-600 dark:text-gray-300 dark:border-gray-500 dark:hover:bg-gray-500 dark:focus:ring-offset-gray-800">
                        Retour
                    </a>
                </div>
            </div>
        </div>
        {% if comments is not empty %}
            <div id="commentsContainer" class="bg-white dark:bg-gray-800 shadow-lg rounded-lg mt-5 p-6">
                <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-6 flex items-center">
                    <svg class="w-6 h-6 mr-2 text-blue-600 dark:text-blue-400" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"></path>
                    </svg>
                    Commentaires de {{ user.pseudo }} ({{ comments|length }})
                </h2>
                <div class="space-y-4">
                    {% for comment in comments %}
                        <div class="comment-container bg-white dark:bg-gray-800 rounded-lg shadow-lg border border-gray-200 dark:border-gray-600 p-4 hover:shadow-xl transition-shadow duration-200">
                            <div class="comment-display">
                                {% set userPhoto = comment.user.photoFilename %}
                                <div class="flex gap-3 items-center mb-3">
                                    <a href="{{ path('view_user_profil', {id: comment.user.id}) }}" class="flex-shrink-0 hover:opacity-80 transition-opacity duration-200">
                                        <img src="
                                            {% if userPhoto %}
                                                {{ asset('uploads/photos/'~userPhoto) }}
                                            {% else %}
                                                {{ asset('images/Avatar.png') }}
                                            {% endif %}
                                            "
                                             alt="photo de profil de {{ comment.user.pseudo }}"
                                             class="h-10 w-10 rounded-full object-cover border-2 border-blue-200 dark:border-gray-600 shadow-sm hover:border-blue-400 dark:hover:border-blue-500 transition-colors duration-200">
                                    </a>
                                    <div class="flex-1">
                                        <a href="{{ path('view_user_profil', {id: comment.user.id}) }}" class="font-semibold text-gray-900 dark:text-white hover:text-blue-600 dark:hover:text-blue-400 transition-colors duration-200 inline-block">
                                            {{ comment.user.pseudo }}
                                        </a>
                                        <span class="text-gray-500 dark:text-gray-400"> sur la sortie </span>
                                        <a class="font-semibold text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300 transition-colors duration-200 hover:underline" href="{{ path('app_sortie_show', {id: comment.sortie.id}) }}">{{ comment.sortie.name }}</a>
                                    </div>
                                </div>
                                <div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-4 mb-3">
                                    <p class="text-gray-800 dark:text-gray-200 whitespace-pre-wrap leading-relaxed">{{ comment.content }}</p>
                                </div>
                                <div class="flex justify-between items-center">
                                    <span class="text-xs text-gray-500 dark:text-gray-400 italic">
                                        {{ comment.createdAt|date('d/m/Y à H:i') }}
                                        {% if comment.createdAt < comment.updatedAt %}
                                            <span>(modifié)</span>
                                        {% endif %}
                                    </span>
                                    <div class="flex gap-2">
                                        {% if is_granted('COMMENT_EDIT', comment) %}
                                            <button class="edit-comment-btn px-4 py-2 border border-transparent text-sm font-medium rounded-lg text-white bg-gradient-to-r from-blue-500 to-blue-600 hover:from-blue-600 hover:to-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 shadow-md hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200" data-comment-id="{{ comment.id }}">
                                                <svg class="w-4 h-4 inline mr-1" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                                </svg>
                                                Modifier
                                            </button>
                                        {% endif %}
                                        {% if is_granted('COMMENT_DELETE', comment) %}
                                            <form action="{{ path('app_comment_delete', {id: comment.id}) }}" method="post" class="inline-flex" onsubmit="return confirm('Êtes vous sûr de vouloir supprimer le commentaire :\n{{ comment.content|escape('js') }}')">
                                                <input type="hidden" name="redirect" value="{{ path('view_user_profil', {id: comment.user.id}) }}">
                                                <button class="px-4 py-2 border border-transparent text-sm font-medium rounded-lg text-white bg-gradient-to-r from-red-500 to-red-600 hover:from-red-600 hover:to-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 shadow-md hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200" type="submit">
                                                    <svg class="w-4 h-4 inline mr-1" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                                    </svg>
                                                    Supprimer
                                                </button>
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete_'~comment.id) }}">
                                            </form>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>

                            <div class="comment-edit hidden">
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
